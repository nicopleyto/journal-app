<div class = "container">
  <section class = "col-7 mx-auto">
    <div class="card my-5">

      <div class="card-body">
        <span class="badge rounded-pill bg-primary"><%= @entry.category.title %></span>
        <h4 class="card-title mt-2"><%= @entry.title %></h4>
        <h6 class="card-subtitle mb-2 text-muted"><%= @entry.date.strftime('%b %e, %Y') %></h6>
        <p class="card-text"><small><%= @entry.body %></small></p>
      </div>

      <div class = "list-group d-flex flex-row justify-content-between">
        <%= link_to '', category_entry_path(@category, @entry), :class => "bi bi-arrows-fullscreen list-group-item-action d-flex justify-content-center py-2 align-items-center remove-link-underline" %>
        <%= link_to '', edit_category_entry_path(@category, @entry), :class => "bi bi-pencil-square list-group-item-action d-flex justify-content-center py-2 align-items-center remove-link-underline" %>
        <%= link_to '', category_entry_path(@category, @entry), method: :delete, data: { confirm: 'Are you sure?' }, :class => "bi bi-trash-fill list-group-item-action d-flex justify-content-center py-2 align-items-center remove-link-underline" %>
      </div>

    </div>

    <%= link_to "← #{@category.title}" , category_entries_path(@category), :class => "btn btn-outline-dark btn-sm mb-4" %>
    <%#= link_to '← Back to Categories', categories_path, :class => "btn btn-outline-dark btn-sm mb-4" %>

  </section>
</div>