<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.title %></td>
        <td><%= entry.body %></td>
        <td><%= entry.date %></td>
        <td><%= link_to 'Show', category_entry_path(@category, entry) %></td>
        <td><%= link_to 'Edit', edit_category_entry_path(@category, entry) %></td>
        <td><%= link_to 'Destroy', [@category, entry], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_category_entry_path(@category) %>
