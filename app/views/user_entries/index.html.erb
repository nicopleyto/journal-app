<h1>Users#entries</h1>

<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.category.title %></td>
        <td><%= entry.title %></td>
        <td><%= entry.body %></td>
        <td><%= entry.date.to_date.strftime('%b %e, %Y') %></td>
        <td><%= link_to 'Show', category_entry_path(entry.category.id, entry.id) %></td>
        <td><%= link_to 'Edit', edit_category_entry_path(entry.category.id, entry.id) %></td>
        <td><%= link_to 'Destroy', category_entry_path(entry.category.id, entry.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

